{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": false,
    "alwaysStrict": true,
    "incremental": true,
    "jsx": "react-jsx",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "moduleResolution": "node",
    "pretty": true,
    "removeComments": true,
    "target": "es2017",

    "paths": {
      "@env/*": ["./src/@development/*", "./src/@production/*"]
    }
  },
  "files": ["./src/@development/index.tsx", "./src/@production/index.tsx"]
}
