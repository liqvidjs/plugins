{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react-jsx",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "pretty": true,
    "removeComments": false,
    "target": "esnext"
  },
  "include": ["src/**/*"]
}
